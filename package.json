{
  "name": "china-star-domain-club-loader",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.chinastar.domain.club",
    "productName": "中国星域俱乐部接档器",
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "icon.ico",
      "settings.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}